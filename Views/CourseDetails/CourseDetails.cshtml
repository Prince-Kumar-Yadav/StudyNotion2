@model Study_Notion.Models.Course

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@Model.Title - Course Purchase</title>
    <style>
        body {
            background-color: #121212;
            color: white;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 1000px;
            margin: 40px auto;
            padding: 20px;
        }

        .course-card {
            background: #1e1e1e;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.6);
        }

        .course-image {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 10px;
        }

        .course-title {
            font-size: 28px;
            margin-top: 20px;
        }

        .course-description {
            margin: 15px 0;
            font-size: 16px;
            line-height: 1.6;
        }

        .video-container {
            margin-top: 30px;
        }

            .video-container h3 {
                margin-bottom: 15px;
                font-size: 20px;
            }

        video {
            width: 100%;
            height: 400px;
            border-radius: 10px;
            object-fit: cover;
        }

    </style>
</head>
<body>
    <div class="container">
        <div class="course-card">
            <img src="@Model.ImagePath" alt="Course Image" class="course-image"/>
            <h2 class="course-title">@Model.Title</h2>
            <p class="course-description">@Model.Description</p>

            <div class="video-container">
                <h3>Full Lecture Content</h3>
                <video controls>
                    <source src="@Model.VideoPath" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>
        </div>
    </div>
</body>
</html>
