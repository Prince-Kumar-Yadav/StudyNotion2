@model Study_Notion.Models.User

@{
    ViewData["Title"] = "Signup";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registration Page</title>
    <style>
        .container5 {
            display: flex;
            margin: auto;
            max-width: 1200px;
            width: 90%;
            background-color: #161b22;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .form-section {
            flex: 1;
            padding: 40px;
        }

            .form-section h1 {
                font-size: 24px;
                margin-bottom: 10px;
                color: #fff;
            }

            .form-section p {
                font-size: 14px;
                margin-bottom: 30px;
                color: #9ca3af;
            }

                .form-section p a {
                    color: #58a6ff;
                    text-decoration: none;
                }

                    .form-section p a:hover {
                        text-decoration: underline;
                    }

        .form-group {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }

            .form-group input {
                width: 100%;
                padding: 12px;
                font-size: 14px;
                border: 1px solid #30363d;
                border-radius: 4px;
                background-color: #0d1117;
                color: #fff;
            }

                .form-group input:focus {
                    outline: none;
                    border-color: #58a6ff;
                }

        .field-validation-error {
            color: red;
            font-size: 13px;
        }

        .password-toggle {
            position: relative;
            flex: 1;
        }

            .password-toggle i {
                position: absolute;
                top: 50%;
                right: 10px;
                transform: translateY(-50%);
                cursor: pointer;
                color: #9ca3af;
            }

        .button {
            display: block;
            width: 100%;
            padding: 12px;
            font-size: 16px;
            font-weight: bold;
            text-align: center;
            background-color: #fbbc05;
            color: #000;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 20px;
        }

            .button:hover {
                background-color: #e0aa04;
            }

        .image-section {
            flex: 1;
            margin-top: 50px;
            background: url('https://via.placeholder.com/600') no-repeat center/cover;
        }
    </style>
</head>
<body>
    <div class="container5">
        <div class="form-section">
            <h1>Join the millions learning to code with StudyNotion for free</h1>
            <p>Build skills for today, tomorrow, and beyond. <a href="#">Education to future-proof your career.</a></p>

            @if (TempData["SuccessMessage"] != null)
            {
                <div style="color: green; font-weight: bold; margin-bottom: 15px;">
                    @TempData["SuccessMessage"]
                </div>
            }

            <form asp-action="Signup" asp-controller="SingUp" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <input asp-for="FirstName" placeholder="First Name *" required />
                    <span asp-validation-for="FirstName" class="field-validation-error"></span>
                    <input asp-for="LastName" placeholder="Last Name *" required />
                    <span asp-validation-for="LastName" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Email" type="email" placeholder="Email Address *" required />
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Phone" type="tel" placeholder="Phone Number" />
                    <span asp-validation-for="Phone" class="field-validation-error"></span>
                </div>

                <div class="form-group password-toggle">
                    <input asp-for="Password" id="password" type="password" placeholder="Password *" required />
                    <i onclick="togglePassword()">👁️</i>
                    <span asp-validation-for="Password" class="field-validation-error"></span>
                </div>

                <button type="submit" class="button">Create Account</button>
            </form>
        </div>

        <div class="image-section">
            <img src="https://my-study-notion.vercel.app/static/media/signup.acaf50bcb11d9aec44b4.webp" alt="Signup Illustration" />
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

    <script>
        function togglePassword() {
            const password = document.getElementById("password");
            password.type = password.type === "password" ? "text" : "password";
        }
    </script>
</body>
</html>
