<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Study Notion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CoreDemo.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-black px-4 text-white">
            <div class="d-flex align-items-center w-100 justify-content-between">
                <div class="d-flex align-items-center">
                    <div class="logo me-4">
                        <div class="logo-icon fw-bold" style="font-size: 1.5rem;">S</div>
                        <span class="ms-2 fw-bold">StudyNotion</span>
                    </div>
                    <div class="menu d-flex gap-3">
                        <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Course</a>
                        <a class="nav-link" asp-controller="Admin" asp-action="ManageCourse">Manage Course</a>
                    </div>
                </div>

                <form asp-controller="Login" asp-action="Logout" method="post" class="mb-0">
                    <button type="submit" class="btn btn-danger">Logout</button>
                </form>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-custom mt-5">
        <div class="container">
            <div class="row">
                <!-- Same footer content as before -->
                <div class="col-md-3">
                    <h5>StudyNotion</h5>
                    <p>Company</p>
                    <a href="#">About</a>
                    <a href="#">Careers</a>
                    <a href="#">Affiliates</a>
                    <div class="social-icons">
                        <a href="#"><i class="fab fa-facebook"></i></a>
                        <a href="#"><i class="fab fa-google"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
                <!-- Other columns (Resources, Plans, Subjects, etc.) -->
                <!-- ... -->
            </div>
            <div class="footer-divider text-center">
                <p>&copy; 2025 StudyNotion. All Rights Reserved.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
