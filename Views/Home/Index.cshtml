@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #0a0c10;
        color: #fff;
        text-align: center;
    }

    .container {
        padding: 50px;
    }

    .header {
        font-size: 2rem;
        font-weight: bold;
    }

    .highlight {
        color: #00d8ff;
    }

    .subtext {
        font-size: 1rem;
        margin-top: 10px;
        line-height: 1.5;
    }

    .buttons {
        margin-top: 30px;
    }

    .btn {
        text-decoration: none;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 1rem;
        font-weight: bold;
        cursor: pointer;
        margin: 0 10px;
    }

    .btn-yellow {
        background-color: #ffc107;
        color: #000;
    }

        .btn-yellow:hover {
            background-color: #ffb300;
        }

    .btn-dark {
        background-color: #333;
        color: #fff;
    }

        .btn-dark:hover {
            background-color: #444;
        }

    .top-button {
        border-style: none;
        border-color: inherit;
        border-width: medium;
        position: absolute;
        top: 20px;
        right: 22px;
        padding: 8px 15px;
        border-radius: 20px;
        background-color: #333;
        color: #fff;
        font-size: 0.9rem;
        font-weight: bold;
        text-decoration: none;
        height: 36px;
        width: 192px;
    }

        .top-button:hover {
            background-color: #444;
        }


    .image-container {
        width: 80%;
        max-width: 900px;
        margin: auto;
        overflow: hidden;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    }

        .image-container img {
            width: 100%;
            height: auto;
            display: block;
        }





    .content {
        max-width: 600px;
        margin: auto;
    }

        .content h1 {
            font-size: 2.5rem;
            line-height: 1.3;
        }

        .content .highlight {
            color: #00e5ff;
        }

        .content p {
            margin: 20px 0;
            font-size: 1rem;
            color: #cbd5e1;
        }

    .buttons {
        margin-top: 20px;
    }

    .button {
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-weight: bold;
        font-size: 1rem;
        display: inline-block;
        margin-right: 10px;
    }

        .button.primary {
            background-color: #ffd700;
            color: #000;
        }

            .button.primary:hover {
                background-color: #f0c400;
            }

        .button.secondary {
            background-color: #374151;
            color: #cbd5e1;
        }

            .button.secondary:hover {
                background-color: #475569;
            }





    .container2 {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 50px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .code-snippet {
        background-color: #1e293b;
        padding: 20px;
        border-radius: 10px;
        font-family: "Courier New", Courier, monospace;
        color: #ff5f5f;
        max-width: 500px;
        white-space: pre-wrap;
    }

    .content {
        max-width: 600px;
